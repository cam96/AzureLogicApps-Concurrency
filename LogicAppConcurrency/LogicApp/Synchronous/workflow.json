                        }
                    ]
                },
                "runAfter": {}
            },
            "For_each_-_Data_item": {
                "type": "Foreach",
                "foreach": "@variables('Data Array')",
                "actions": {
                    "Increment_variable_-_Add_to_sum": {
                        "type": "IncrementVariable",
                        "inputs": {
                            "name": "Sum",
                            "value": "@items('For_each_-_Data_item')"
                        }
                    }
                },
                "runAfter": {
                    "Initialize_variable_-_Data_Array": [
                        "SUCCEEDED"
                    ],
                    "Initialize_variable_-_Sum": [
                        "SUCCEEDED"
                    ]
                },
                "runtimeConfiguration": {
                    "concurrency": {
                        "repetitions": 1
                    }
                }
            },
            "Initialize_variable_-_Sum": {
                "type": "InitializeVariable",
                "inputs": {
                    "variables": [
                        {
                            "name": "Sum",
                            "type": "integer",
                            "value": 0
                        }
                    ]
                },
                "runAfter": {}
            },
            "Condition_-_Is_Sum_5,050": {
                "type": "If",
                "expression": {
                    "and": [
                        {
                            "equals": [
                                "@variables('Sum')",
                                5050
                            ]
                        }
                    ]
                },
                "actions": {
                    "Response_-_Success": {
                        "type": "Response",
                        "kind": "http",
                        "inputs": {
                            "statusCode": 200,
                            "body": "Success, the correct sum is 5,050!"
                        }
                    }
                },
                "else": {
                    "actions": {
                        "Response_-_Failure": {
                            "type": "Response",
                            "kind": "Http",
                            "inputs": {
                                "statusCode": 400,
                                "body": "An error occurred while calculating the sum.  We calculated @{variables('Sum')}, but it should have been 5,050."
                            }
                        }
                    }
                },
                "runAfter": {
                    "For_each_-_Data_item": [
                        "Succeeded"
                    ]
                }
            }
        },
        "triggers": {
            "When_a_HTTP_request_is_received": {
                "type": "Request",
                "kind": "Http"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {}
    },
    "kind": "Stateful"
}